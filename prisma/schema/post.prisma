model Post {
    post_id    String     @id @default(uuid())
    title      String     @db.VarChar(225)
    content    String     @db.Text
    thumbnail  String?
    isFeatured Boolean    @default(false)
    status     PostStatus
    tags       String[]
    view       Int        @default(0)
    author_id  String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    comment    Comment[]

    @@index([author_id])
    @@map("posts")
}

enum PostStatus {
    DRAFT
    PUBLISHED
    ARCHIVED
}
